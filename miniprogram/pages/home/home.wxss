/* miniprogram/pages/home/home.wxss */

input {
  width: 95%;
  height: 80rpx;
  margin: 20rpx 0;
  background-color: white;
  border-radius: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.tabs {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: white;
}

.tab {
  flex: 1;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  color: #333;
}

.tab_select {
  border-bottom: 2px solid #FE765E;
  color: #FE765E;
}

.item-container {
  width: 100%;
  background-color: white;
  border-bottom: 1px solid #a1a1a1;
}