/* miniprogram/pages/me/me.wxss */

.me-view {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 200rpx;
  display: flex;
  align-items: center;
  background-color: #FE765E;
}

.me-view button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: transparent;
  position: relative;
}

.me-view button image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.name-contaniner {
  flex-grow: 1;
  margin-left: 20rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}