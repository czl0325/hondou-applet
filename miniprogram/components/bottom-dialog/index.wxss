/* components/bottom-dialog/index.wxss */

.container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
}

.panel {
  position: absolute;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  min-height: 250rpx;
  box-sizing: border-box;
  background-color: white;
  padding-top: 60rpx;
}

/* 可以直接对外部样式修改 */
.container .icon-close-hei {
  position: absolute;
  right: 0;
  top: 0;
  padding: 20rpx; 
  box-sizing: border-box;
}