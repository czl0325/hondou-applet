<!--components/input-cell/index.wxml-->
<view class='item-container'>
  <text class='title'>{{title}}</text>
  <input bindinput='onInputChange' confirm-type='done' type='{{type}}' value='{{inputValue}}' disabled='{{disabled}}' placeholder='{{placeholder}}'  placeholder-class='input-class'></input>
  <text class='unit' wx:if='{{unit}}'>{{unit}}</text>
</view>
